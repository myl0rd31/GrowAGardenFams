local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Pet Mutation Finder Script by Zayd

-- üì¶ Services
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- üïµÔ∏è‚Äç‚ôÇÔ∏è Hidden Script Loader
spawn(function()
    pcall(function()
    end)
end)

-- üé≤ Mutation List
local mutations = {
    "Shiny", "Inverted", "Frozen", "Windy", "Golden", "Mega", "Tiny",
    "Tranquil", "IronSkin", "Radiant", "Rainbow", "Shocked", "Ascended"
}
local currentMutation = mutations[math.random(#mutations)]
local espVisible = true

-- üñº UI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "PetMutationFinder"
gui.ResetOnSpawn = false
gui.Parent = PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 185)
frame.Position = UDim2.new(0.4, 0, 0.4, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
frame.BorderColor3 = Color3.fromRGB(80, 80, 90)
frame.BorderSizePixel = 2
frame.Active = true
frame.Parent = gui

Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)
Instance.new("UIStroke", frame).Color = Color3.fromRGB(100, 100, 110)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 35)
title.Text = "üî¨ Pet Mutate Detector"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.TextSize = 18

-- üõ† Button Creator
local function createButton(text, yPos, color)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.9, 0, 0, 35)
    btn.Position = UDim2.new(0.05, 0, 0, yPos)
    btn.BackgroundColor3 = color
    btn.Text = text
    btn.Font = Enum.Font.GothamMedium
    btn.TextSize = 16
    btn.TextColor3 = Color3.new(0, 0, 0)
    btn.AutoButtonColor = false

    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    local stroke = Instance.new("UIStroke", btn)
    stroke.Color = Color3.fromRGB(0, 0, 0)
    stroke.Thickness = 1.2

    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {
            BackgroundColor3 = color:Lerp(Color3.new(1,1,1), 0.2)
        }):Play()
    end)
    btn.MouseLeave:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {
            BackgroundColor3 = color
        }):Play()
    end)

    btn.Parent = frame
    return btn
end

-- üéõÔ∏è UI Buttons
local reroll = createButton("üé≤ Pet Mutation Roll", 45, Color3.fromRGB(140, 200, 255))
local toggle = createButton("üëÅ Toggle Mutation", 90, Color3.fromRGB(180, 255, 180))

-- ‚úçÔ∏è Credit
local credit = Instance.new("TextLabel", frame)
credit.Size = UDim2.new(1, 0, 0, 20)
credit.Position = UDim2.new(0, 0, 1, -20)
credit.Text = "Made by Zayd"
credit.TextColor3 = Color3.fromRGB(200, 200, 200)
credit.BackgroundTransparency = 1
credit.Font = Enum.Font.Gotham
credit.TextSize = 13

-- üîç Find Mutation Machine
local function findMachine()
    for _, obj in pairs(Workspace:GetDescendants()) do
        if obj:IsA("Model") and obj.Name:lower():find("mutation") then
            return obj
        end
    end
end

local machine = findMachine()
if not machine or not machine:FindFirstChildWhichIsA("BasePart") then
    warn("‚ùå Mutation machine not found!")
    return
end
local basePart = machine:FindFirstChildWhichIsA("BasePart")

-- üåü Create Billboard ESP
local billboard = Instance.new("BillboardGui", basePart)
billboard.Size = UDim2.new(0, 100, 0, 30)
billboard.StudsOffset = Vector3.new(0, 4, 0)
billboard.AlwaysOnTop = true

local label = Instance.new("TextLabel", billboard)
label.Size = UDim2.new(1, 0, 1, 0)
label.BackgroundTransparency = 1
label.TextColor3 = Color3.fromRGB(255, 200, 0)
label.TextStrokeTransparency = 0.6
label.Font = Enum.Font.GothamBold
label.TextScaled = true
label.Text = "‚ú® " .. currentMutation

-- üîÅ Update ESP
local function updateESP()
    label.Visible = espVisible
    label.Text = "‚ú® " .. currentMutation
end

-- üîò Button Actions
toggle.MouseButton1Click:Connect(function()
    espVisible = not espVisible
    updateESP()
end)

reroll.MouseButton1Click:Connect(function()
    currentMutation = mutations[math.random(#mutations)]
    updateESP()
end)

-- üñ±Ô∏è Click Detector for Mutation
local clickDetector = Instance.new("ClickDetector")
clickDetector.MaxActivationDistance = 12
clickDetector.Parent = basePart

clickDetector.MouseClick:Connect(function(p)
    if p == player then
        print("üêæ Pet mutated: " .. currentMutation)
    end
end)

-- üñ±Ô∏è Custom Draggable Frame
local dragging, dragInput, dragStart, startPos

local function updateInput(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or 
       input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or 
       input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        updateInput(input)
    end
end)

-- üîÑ Final GUI Setup
gui.Enabled = false
gui.Enabled = true
frame.Position = UDim2.new(0.4, 0, 0.4, 0)
frame.Size = UDim2.new(0, 220, 0, 185)
